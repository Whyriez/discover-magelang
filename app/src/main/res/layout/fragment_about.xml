<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.profile.about.AboutFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurfaceBright"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">


            <ImageView
                android:id="@+id/ivBack"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_left"
                android:layout_gravity="start"
                android:padding="16dp"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentang Kami"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:layout_gravity="end"
                android:padding="16dp"
                android:contentDescription="Edit" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section Mengapa Kami -->
            <TextView
                android:id="@+id/title_mengapa_kami"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mengapa Kami"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/body_mengapa_kami"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:background="#CCCCCC"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/title_visi_misi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visi dan Misi"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/body_visi_misi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:background="#CCCCCC"
                android:layout_height="1dp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="50dp"
                android:id="@+id/img_profile"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/img_holder"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                app:shapeAppearance="@style/Circular"
                android:layout_gravity="center"
                />

            <!-- Nama dan Jabatan -->
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Andri Wijayanto"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txt_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chief Executive Officer"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="#615AC4"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/bg_rounded_icon"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon_linkedin"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/linkedin"
                        android:contentDescription="LinkedIn"
                        android:layout_margin="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/bg_rounded_icon"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon_instagram"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/instagram"
                        android:contentDescription="Instagram"
                        android:layout_margin="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/bg_rounded_icon"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon_email"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/outline_email_24"
                        android:contentDescription="Email"
                        android:layout_margin="8dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>